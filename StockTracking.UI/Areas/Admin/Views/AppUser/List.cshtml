@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model List<StockTracking.Model.Option.AppUser>

<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Kullanıcı Adı</th>
                <th>Şifre</th>
                <th>Adres</th>
                <th>Telefon No</th>
                <th>Role</th>
                <th>Fotoğraf</th>
                <th colspan="2"> Güncelle / Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Password</td>
                <td>@item.Address</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role</td>
                <td><img src="@item.XSmallUserImage" /></td>
                <td>
                    <a href="/Admin/AppUser/Update/@item.ID">Güncelle</a>
                    /
                    <a href="/Admin/AppUser/Delete/@item.ID">Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


