
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model StockTracking.UI.Areas.Admin.Models.VM.ProductVM

<section class="content-header">
    <h1>
        Product Transactions
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminIndex"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Admin/Product/Add">Add Product</a></li>
        <li><a href="/Admin/Product/List">List of Product</a></li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Product</h3>
                </div>
                <form action="/Admin/Product/Add" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="ProductName">Product Name</label>
                            <input type="text" name="ProductName" class="form-control" placeholder="ProductName">
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="text" name="Quantity" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="form-group">
                            <label for="Kdv">Kdv</label>
                            <input type="text" name="Kdv" class="form-control" placeholder="Kdv">
                        </div>
                        <div class="form-group">
                            <label for="FirstPrice">First Price</label>
                            <input type="text" name="FirstPrice" class="form-control" placeholder="FirstPrice">
                        </div>
                        <div class="form-group">
                            <label for="SalePrice">Sale Price</label>
                            <input type="text" name="SalePrice" class="form-control" placeholder="SalePrice">
                        </div>

                        <div class="form-group">
                            <label for="AddDate">Add Date</label>
                            <input type="text" name="AddDate" class="form-control" placeholder="AddDate">
                        </div>
                        <div class="form-group">
                            <label for="Image">Product Photo</label>
                            <input type="file" name="Image" value="" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

