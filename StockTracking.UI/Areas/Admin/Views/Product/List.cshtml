
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}
@model List<StockTracking.Model.Option.Product>

<link href="~/Content/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/scripts/jquery.dataTables.min.js"></script>
<script src="~/Content/scripts/dataTables.bootstrap.min.js"></script>
<section class="content-header">
    <h1>
        Product Transactions
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminIndex"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/Admin/Product/Add">Add Product</a></li>
        <li><a href="/Admin/Product/List">List of Product</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Products</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Kdv</th>
                                <th>First Price</th>
                                <th>Sale Price</th>
                                <th>Add Date</th>
                                <th>Product Photo</th>
                                <th>Category Name</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Kdv</td>
                                    <td>@item.FirstPrice</td>
                                    <td>@item.SalePrice</td>
                                    <td>@item.AddDate</td>
                                    <td><img src="@item.ImagePath" /></td>
                                    <td>@item.Category.CategoryName</td>


                                    <td><a href="/Admin/Product/Update/@item.ID" type="button" class="btn btn block btn-warning btn-flat">Update</a></td>
                                    <td><a href="/Admin/Product/Delete/@item.ID" type="button" class="btn btn-block btn-danger btn-flat">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#example1').DataTable()
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })</script>



