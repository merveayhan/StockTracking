
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model StockTracking.UI.Areas.Admin.Models.VM.ProductVM

<form action="/Admin/Product/Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" name="ProductName" value="@Model.Product.ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="text" name="Quantity" value="@Model.Product.Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Kdv">Kdv</label>
        <input type="text" name="Kdv" value="@Model.Product.Kdv" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FirstPrice">First Price</label>
        <input type="text" name="FirstPrice" value="@Model.Product.FirstPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="SalePrice">Sale Price</label>
        <input type="text" name="SalePrice" value="@Model.Product.SalePrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="AddDate">Add Date</label>
        <input type="text" name="AddDate" value="@Model.Product.AddDate" class="form-control" />
    </div>

    <div class="form-group">
        <label for="CategoryID">Category Name</label>
        <select name="CategoryID"  class="form-control">
            @foreach (var item in Model.Categories)
            {
                <option value="@item.ID">@item.CategoryName</option>
            }
        </select>
        <div class="form-group">
            <label for="Image">Product Photo</label>
            <input type="file" name="Image" value="@Model.Product.ImagePath" class="form-control" />
        </div>
    </div>

    <input type="submit" name="name" value="Güncelle" class="form-control btn btn-primary" />
</form>




